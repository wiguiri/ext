{
  "manifest_version": 3,
  "name": "Exibir Notas Diretamente",
  "version": "1.0",
  "description": "Extensão para exibir notas diretamente na página de matrícula da faculdade.",
  "permissions": ["scripting"],
  "host_permissions": [
    "http://127.0.0.1:5500/exemplo.html*"
  ],
  "content_scripts": [
    {
      "matches": ["http://127.0.0.1:5500/exemplo.html*"],
      "js": ["libs/jquery.min.js", "libs/bootstrap.bundle.min.js", "content.js"]
    }
  ]
}
